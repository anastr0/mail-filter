{
    "filters": [
        {
            "name": "important_work_email",
            "description": "Move Important Work Email",
            "rules": [
                {"field": "FROM", "predicate": "CONTAINS", "value": "mckesson.com"}
            ],
            "overall_predicate": "ANY",
            "actions": [
                ["MARK_AS_READ", null],
                ["MOVE_MESSAGE", "VERY_IMPORTANT"]
            ]
        },
        {
            "name": "github_notifications",
            "description": "Filter GitHub Notifications",
            "rules": [
                {"field": "FROM", "predicate": "CONTAINS", "value": "github.com"},
                {"field": "SUBJECT", "predicate": "CONTAINS", "value": "GitHub"}
            ],
            "overall_predicate": "ANY",
            "actions": [
                ["MARK_AS_READ", null],
                ["MOVE_MESSAGE", "git"]
            ]
        },
        {
            "name": "move_recent_important_emails",
            "description": "Move recent important emails from lavorro.com",
            "rules": [
                {"field": "FROM", "predicate": "CONTAINS", "value": "lavorro.com"},
                {"field": "RECEIVED_DATE", "predicate": "LESS_THAN", "value": "2 days"}
            ],
            "overall_predicate": "ALL",
            "actions": [
                ["MOVE_MESSAGE", "TEST_MAIL_FILTER"]
            ]
        }
    ]
} 
